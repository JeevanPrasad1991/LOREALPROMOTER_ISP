<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"

        android:layout_margin="15dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_popup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/add_expense_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/bill_date"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rouded_corner"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/add_date"
                    android:layout_width="0dp"
                    android:hint="@string/start_time"
                    android:layout_weight=".8"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"

                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/icon_date"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:background="@drawable/calendar_today"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linnear_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relaytive"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/yes_poup_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_weight=".5"
                android:background="@drawable/pending_corner_button"
                android:singleLine="true"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/no_popup_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:background="@drawable/pending_corner_button"
                android:text="NO"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

